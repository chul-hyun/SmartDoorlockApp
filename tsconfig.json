{
    "compilerOptions": {
        "target"                : "es6",
        "jsx"                   : "react",
        "noImplicitAny"         : true,
        "experimentalDecorators": true,
        "preserveConstEnums"    : true,
        "declaration"           : true,
        "noExternalResolve"     : true,
        "sourceMap"             : true,
        "allowJs"               : true
    },
    "filesGlob": [
      "**/*.ts",
      "**/*.tsx",
      "!node_modules/**"
    ],
    "exclude": [
        "typings/browser.d.ts",
        "typings/browser",
        "node_modules"
    ],
    "compileOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}
